<h3 class="divmt">
 <%= DateTime.current.to_date.strftime("%B %e , %Y") %>
 </h3>

 <div class="d-flex align-items-start justify-content-start flex-row"> 
    <div class=" d-flex align-items-start m-5">
        <div>
            <main class="container">
                <div class="header">
                <h3>Categories</h3>
                <%= link_to "+ New Category",
                            new_category_path,
                            class: "btn btn-link" %>
                </div>
            
                <div class="category">
            
                <table class="table">
                <thead class="thead-dark">
                    <tr >
                    <th scope="col">Name</th>

                    </tr>
                </thead>
                <tbody>
                    <%= render @categories %>
                </tbody>
                </table>
                
                </div>
            </main>
        </div>
    </div>

    <div class=" d-flex align-items-center  m-5 border border-dark rounded p-2">
        <div>
            <h5> Task/s for todaaay!</h5>
            <% @tasks.each do |task| %>
                <ul>
                  <li> <%= task.task_name %></li>
                </ul>
              <% end %>
           

        </div>
    </div>
</div>



