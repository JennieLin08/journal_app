<h3 class="divmt">
 <%= DateTime.current.to_date.strftime("%B %e , %Y") %>
 </h3>

 <div class="d-flex align-items-start justify-content-start flex-row"> 
    <div class=" d-flex align-items-start m-5">
        <div>
            <main class="container">
                <div class="header">
                <h1>Categories</h1>
                <%= link_to "+ New Category",
                            new_category_path,
                            class: "btn btn-link" %>
                </div>
            
                <div class="category">
            
                <table class="table">
                <thead class="thead-dark">
                    <tr >
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <%= render @categories %>
                </tbody>
                </table>
                
                </div>
            </main>
        </div>
    </div>

    <div class=" d-flex align-items-center  m-5 border border-dark">
        <div>
            <h5> Deadlines</h5>
        </div>
    </div>
</div>



