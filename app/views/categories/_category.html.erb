
  <tr class="d-flex flex-row align-items-center ">
    <td>
      <th><%=  category.id  %></th>
    </td>
    <td>
      <th><%= link_to category.category_name, category_tasks_path(category)  %></th>
    </td>
   
    <td class=" d-flex flex-row align-items-center justify-content-end">
      <%= link_to  edit_category_path(category)   do %>
        <i class="fa-solid fa-pen-to-square"></i>
        <% end %>

      <%= button_to  category, method: :delete ,
      class: "btn btn-link text-danger "  do %>
        <i class="fa-solid fa-trash"></i>
        <% end %>
        
    </td>
  </tr>
