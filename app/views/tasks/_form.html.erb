
  <%= form_for @category_task, :url => { :action => "create" } do |f|  %>
    <%# form_for(@category_task), category_task do |f|  %>

    <div class="form-group mb-3">
        <%= f.text_field :task_name , placeholder: "task name", :class=>"form-control  text-center border border-dark" %>
    </div>
    <div class="form-group mb-3">
        <%= f.hidden_field :category_id, :value=>:id , :class=>"form-control  text-center border border-dark" %>
    </div>
    <div class="form-group mb-3">
        <%= f.text_field :desc, placeholder: "description" , :class=>"form-control  text-center border border-dark" %>
    </div>
    <div class="form-group mb-3">
        <div>
            <span>Deadline    :</span>
        </div>
        <div>
            <%= f.date_select :deadline , :class=>"form-control  text-center border border-dark"%>
        </div>
        
    </div>

    <div class="field">
        <span>Status    :</span>
        <br />
        <%= f.label :status, "Completed", value: "true"  %>
        <%= f.radio_button :status, true %>
        <%= f.label :status, "Pending", value: "false" %>
        <%= f.radio_button :status, false, checked: true %>
    </div>


    <div class="form-group mb-3">
        <%= f.submit "Save" ,class: "btn btn-dark form-control border border-dark" %>
    </div>
  <% end %>

  
